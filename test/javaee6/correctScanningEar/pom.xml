<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.sun.faces.test.javaee6</groupId>
        <artifactId>pom</artifactId>
        <version>3.0.0-m01-SNAPSHOT</version>
    </parent>
    
    <artifactId>correctScanningEar</artifactId>
    <packaging>ear</packaging>
    <name>Mojarra ${project.version} - Test - JavaEE 6 - Correct Scanning EAR</name>
    
    <build>
        <finalName>test-javaee6-correctScanningEar</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.10</version>
                <configuration>
                    <displayName>test-javaee6-correctScanningEar</displayName>
                    <encoding>UTF-8</encoding>
                    <version>6</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <modules>
                        <webModule>
                            <groupId>com.sun.faces.test.javaee6</groupId>
                            <artifactId>correctScanningWar1</artifactId>
                            <contextRoot>/test-javaee6-correctScanningWar1</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>com.sun.faces.test.javaee6</groupId>
                            <artifactId>correctScanningWar2</artifactId>
                            <contextRoot>/test-javaee6-correctScanningWar2</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>com.sun.faces.test.javaee6</groupId>
            <artifactId>correctScanningWar1</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.sun.faces.test.javaee6</groupId>
            <artifactId>correctScanningWar2</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>com.sun.faces.test.javaee6</groupId>
            <artifactId>correctScanningJar</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>
